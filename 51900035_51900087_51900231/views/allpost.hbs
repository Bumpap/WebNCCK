<div class="container-fluid gedf-wrapper">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <img class="avatar" src="{{avatar}}" alt="Avatar">
                    <br>

                    <a href="/profile-user" id="username" class="h5">{{username}}</a>

                    <div class="h7 text-muted">{{email}}</div>
                    {{!-- {{#if role.equals("admin")}}
                    <TEXTAREA class=""></TEXTAREA>
                    {{/if}} --}}
                    {{!-- <div class="h7">Create account
                    </div> --}}

                </div>
                <ul class="list-group list-group-flush">


                    <li class="list-group-item">
                        <a href="/" id="allpost">
                            <div class="h6 text-muted">Back to Home Page</div>
                        </a>

                    </li>

                </ul>
            </div>
        </div>
        <div class="col-md-6 gedf-main">

            <!-- Post /////-->

            <!--- \\\\\\\Post-->
            <div class="card gedf-card"  id="status">
                {{#each result}}
                <div class="card-body" id={{_id}}>
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="mr-2">
                                    <img class="rounded-circle" width="45" src="{{avatar}}" alt="">
                                </div>
                                <div class="ml-2">
                                    <div class="h5 m-0" id="display-name">{{creator}}</div>

                                </div>
                            </div>
                            <div>
                                <div class="dropdown">
                                    <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-ellipsis-h"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                                        <div class="h6 dropdown-header">Configuration</div>
                                        <button class="dropdown-item" data-id={{_id}} id="edit" data-toggle="modal"
                                            data-target="#editModal">Edit</button>
                                        <button class="dropdown-item" data-id={{_id}} id="delete">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="card-body">
                        <div class="text-muted h7 mb-2" id="datetime"> <i class="fa fa-clock-o"></i>10 min ago</div>
                        {{!-- <a class="card-link" href="#">
                            <h5 class="card-title">Lorem ipsum dolor sit amet, consectetur adip.</h5>
                        </a> --}}

                        <p id="user-status" class="card-text">
                            {{content}}
                        </p>
                    </div>
                    <div class="card-footer">
                        <a href="#" class="card-link"><i class="fa fa-gittip"></i> Like</a>
                        <a class="card-link" id="comment" data-toggle="modal" data-target="#commentModal"><i
                                class="fa fa-comment"></i> Comment</a>
                        <a href="#" class="card-link"><i class="fa fa-mail-forward"></i> Share</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>


    </div>
</div>